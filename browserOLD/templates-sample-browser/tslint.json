{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "**/odatajs-4.0.0.js",
      "src/samples/data-grid/DataGridPerformance.tsx",
      "src/samples/excel-library/ExcelLibraryWorkbooks.tsx",
      "src/images/*.*",
      "src/navigation/*.tsx",
      "src/navigation/*.ts",
      "src/navigation/*.js",
      "src/utilities/*.ts",
      "src/components/*.ts",
      "src/components/*.tsx"
    ]
  },
  "rules": {
    "no-console": false,
    "no-string-literal": false,
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "max-classes-per-file": 4,
    "prefer-const": false,
    "prefer-for-of": false
  },
  "jsRules": {
    "no-console": false,
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "max-classes-per-file": 4,
    "prefer-const": false,
    "prefer-for-of": false
  }
}
