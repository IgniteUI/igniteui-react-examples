{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "**/odatajs-4.0.0.js",
      "src/samples/*.*",
      "src/images/*.*",
      "src/navigation/*.tsx",
      "src/navigation/*.ts",
      "src/navigation/*.js",
      "src/utilities/*.ts",
      "src/components/*.ts",
      "src/components/*.tsx",
      "browserOLD",
      "samples",
      "tasks",
      "gulp*.ts",
      "gulp*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "no-string-literal": false,
    "no-unused-vars": false,
    // "no-unused-vars": [ "error", { "varsIgnorePattern": "React"} ],
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "max-classes-per-file": [true, 5],
    "prefer-const": false,
    "prefer-for-of": false
  },
  "jsRules": {
    "no-console": false,
    "no-unused-vars": false,
    // "no-unused-vars": [ "error", { "args": "none", "varsIgnorePattern": "React"} ],
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "max-classes-per-file": [true, 5],
    "prefer-const": false,
    "prefer-for-of": false
  }
}
